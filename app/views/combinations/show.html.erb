<div class="page-header">
  <h3>Combination #<%= @combination.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Recipe</dt>
      <dd><%= @combination.recipe_id %></dd>

      <dt>Ingredient</dt>
      <dd><%= @combination.ingredient_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/combinations" class="btn btn-primary">
        Back
      </a>
      <a href="/combinations/<%= @combination.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_combination/<%= @combination.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
